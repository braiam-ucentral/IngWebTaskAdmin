<?xml version="1.0"?>

<faces-config
    version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
>
	<lifecycle>
		<phase-listener>com.liferay.faces.util.lifecycle.DebugPhaseListener</phase-listener>
	</lifecycle>
	
	<!-- ADMIN COURSES -->
	<navigation-rule>
		<from-view-id>/views/manageCourses/manageCourses.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>create-course</from-outcome>
			<to-view-id>/views/manageCourses/createCourse.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageCourses/manageCourses.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>edit-course</from-outcome>
			<to-view-id>/views/manageCourses/createCourse.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageCourses/manageCourses.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>remove-success</from-outcome>
			<to-view-id>/views/manageCourses/manageCourses.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageCourses/manageCourses.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>manage-enrollments</from-outcome>
			<to-view-id>/views/manageEnrollments/manageEnrollments.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/manageCourses/createCourse.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/views/manageCourses/manageCourses.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	
	
	<!-- MANAGE TEACHERS -->
	<navigation-rule>
		<from-view-id>/views/manageTeachers/manageTeachers.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>create-teacher</from-outcome>
			<to-view-id>/views/manageTeachers/createTeacher.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageTeachers/manageTeachers.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>edit-teacher</from-outcome>
			<to-view-id>/views/manageTeachers/createTeacher.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageTeachers/manageTeachers.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>remove-success</from-outcome>
			<to-view-id>/views/manageTeachers/manageTeachers.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageTeachers/createTeacher.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/views/manageTeachers/manageTeachers.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<!-- MANAGE STUDENTS -->
	<navigation-rule>
		<from-view-id>/views/manageStudents/manageStudents.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>create-student</from-outcome>
			<to-view-id>/views/manageStudents/createStudent.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageStudents/manageStudents.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>edit-student</from-outcome>
			<to-view-id>/views/manageStudents/createStudent.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageStudents/manageStudents.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>remove-success</from-outcome>
			<to-view-id>/views/manageStudents/manageStudents.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	<navigation-rule>
		<from-view-id>/views/manageStudents/createStudent.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/views/manageStudents/manageStudents.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	
	
</faces-config>